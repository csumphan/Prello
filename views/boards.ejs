<!DOCTYPE html>

<html>
<head>
    <title>Prello</title>
    <link rel="stylesheet" type="text/css" href="stylesheets/style2.css">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    </head>
<body>

        <ul class="nav">
        <li>My Account</li>
        <li class="nav-board">
            Boards
        </li>
        <li>Home</li>
        <li id='navbar-logo'>Prello</li>
        <li class='sign-out clickable'>Sign Out</li>
        <li class="menu clickable">
            Menu
        </li>

    </ul>
    <div class="board-list">
    <h3>Personal Boards</h3>

    <ul class='boards'>
        <% for(var x = 0; x < boards.length; x++) {%>

            <li>
                <form>
                    <button contenteditable="true" class='board' formaction="/board/<%=boards[x]._id%>" formmethod="GET"> <%= boards[x].title%> </button>
                </form>
            </li>
        <% } %>

    </ul>
        <input class='add-board-title' type='text' placeholder="Board Title...">
        <button class='boards-button add-board'>Add Board</button>
        <button class='boards-button delete-board'>Delete Board</button>
    </div>

    <script src='javascripts/script2.js'></script>

    </body>
</html>
